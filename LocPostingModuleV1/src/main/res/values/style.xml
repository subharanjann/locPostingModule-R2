<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomHeaderStyle">
        <item name="android:background">#F40D0D</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CustomTextStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="CustomTextgreyStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>

    </style>
    <style name="CustomImageStyle">
        <item name="android:backgroundTint">#F40D0D</item>

    </style>
    <style name="CustombuttonStyle">
        <item name="android:backgroundTint">@color/lightredStuff</item>

    </style>

    <style name="CustomCardViewStyle"
        >
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>

    </style>
    <style name="OuterCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>

        <item name="android:backgroundTint">#000000</item> <!-- Black border color -->
    </style>

    <style name="InnerCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="cardCornerRadius">8dp</item> <!-- Adjust as needed -->
        <item name="cardBackgroundColor">#ECECEC</item> <!-- Content background color -->
        <item name="cardElevation">0dp</item>
    </style>


    <style name="CustomStyleBackground">
        <item name="android:background">#0DFF40D0</item>
    </style>

    <style name="CustomdescriptionBackground">
        <item name="android:textColor">@color/redStuff</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
       <!-- <item name="android:background">@drawable/top_nav_design</item> -->
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnConfirmStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
       <!-- <item name="android:background">@drawable/top_nav_design</item> -->
        <item name="android:backgroundTint">@color/redStuff</item>
        <item name="backgroundColor">@color/redStuff</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="progressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/redStuff</item>

    </style>

    <style name="standardButtonStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/design_alter_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item></style>

    <style name="titleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
